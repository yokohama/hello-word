<h2>Forgot your password?</h2>

<%= form_for(resource, as:resource_name, url:password_path(resource_name), html:{ method:'post', class:'form-horizontal' }) do |f| %>
  <%= error_messages(resource) %>
  <div class="control-group">
    <%= f.label :email, class:'control-label', for:'inputEmail' %>
    <div class="controls">
      <%= f.email_field :email, id:'inputEmail', placeholder:'Email', autofocus:true %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Send me reset password instructions", class:'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
