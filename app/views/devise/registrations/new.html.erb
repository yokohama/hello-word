<h2>Sign up</h2>

<%= form_for(resource, as:resource_name, url:registration_path(resource_name), html:{class:'form-horizontal'}) do |f| %>
  <%= error_messages(resource) %>
  <div class="control-group">
    <%= f.label :email, class:'control-label', for:'inputEmail' %>
    <div class="controls">
      <%= f.email_field :email, id:'inputEmail', placeholder:'Email', autofocus:true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, class:'control-label', for:'inputPassword' %>
    <div class="controls">
      <%= f.password_field :password, id:'inputPassword', placeholder:'Password' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, class:'control-label', for:'inputPasswordConfirmation' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, id:'inputPasswordConfirmation', placeholder:'Password' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign up", class:'btn btn-primary' %>
    </div>
  </div>
<% end %>
