<h2>Sign in</h2>

<%= form_for(resource, as:resource_name, url:session_path(resource_name), html:{class:'form-horizontal'}) do |f| %>
  <div class="control-group">
    <%= f.label :email, class:'control-label', for:'inputEmail' %>
    <div class="controls">
      <%= f.email_field :email, id:'inputEmail', placeholder:'Email', autofocus:true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, class:'control-label', for:'inputPassword' %>
    <div class="controls">
      <%= f.password_field :password, id:'inputPassword', placeholder:'Password' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <input type="checkbox"> Remember me
          <%= f.check_box :remember_me %>
        </label>
      <% end -%>
      <%= f.submit "Sign in", class:'btn btn-primary' %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
